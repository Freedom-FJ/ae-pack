{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["ES2017", "DOM"],
    "sourceMap": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "allowJs": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}
